<div id="mainContainer">

    <br/>
    <!--Video-->
    <div id="canvasDiv">
        <canvas id="videoCanvas"></canvas>
    </div>
    <div id="mediaDiv">
        <video id="videoElement"></video>
        <audio id="audioElement"></audio>
    </div>
</div>
<div id="infoContainer">
    <div class="infoItem">
        <div>Status</div>
        <div id="statusMsg">Initializing...</div>
    </div>
    <div class="infoItem">
        <div>Controller Type</div>
        <div id="controllerType">Keyboard</div>
    </div>

    <div class="infoItem">
        <div>Volume</div>
        <input id="streamVolume" type="range" min="1" max="100" value="80" step="10" class="slider">
    </div>   
</div>

<div id="hiddenInfoContainer">
    <div class="hiddenInfoItem">
        <div>Track</div>
        <div id="selectedTrack">{{ .TrackName }}</div>
    </div>
    <div class="hiddenInfoItem">
        <div>Car</div>
        <div id="selectedCar">{{ .CarName }}</div>
    </div>
    <div class="hiddenInfoItem">
        <div>ESC</div>
        <div id="escAndGear"></div>
    </div>
    
    <div class="hiddenInfoItem">
        <div>Steering</div>
        <div id="steerAndTrim"></div>
    </div>

    <div class="hiddenInfoItem">
        <div>Camera</div>
        <div id="panAndTilt"></div>
    </div>
</div>